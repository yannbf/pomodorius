<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="2dp">
    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:textColor="@color/primary_text"
                android:id="@+id/taskTitleDetail"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Description"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/taskDescriptionDetail"
                android:layout_below="@+id/taskTitleDetail"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Pomodoro"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/taskPomodoroDetail"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="ID"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/taskIdDetail"
                android:layout_alignTop="@+id/taskTitleDetail"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Pomodoros: "
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/textView5"
                android:layout_below="@+id/taskDescriptionDetail"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Breaks(min):"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Shortbreak"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/taskShortBreakDetail"
                android:layout_alignTop="@+id/textView9"
                android:layout_toEndOf="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="LongBreak"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/taskLongBreakDetail"
                android:layout_below="@+id/taskPomodoroDetail"
                android:layout_marginEnd="28dp"
                android:layout_toEndOf="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="short -"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/textView10"
                android:layout_below="@+id/taskPomodoroDetail"
                android:layout_toEndOf="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="long -"
                android:textSize="15sp"
                android:textColor="@color/secondary_text"
                android:id="@+id/textView11"
                android:layout_below="@+id/taskPomodoroDetail"
                android:layout_toEndOf="@+id/taskShortBreakDetail"
                android:paddingStart="20dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>