<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.EditActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task ID: "
        android:textColor="@color/primary_text"
        android:id="@+id/taskIdLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_material_dark"
        android:id="@+id/taskIdEdit"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/taskIdLabel"
        android:layout_toEndOf="@+id/taskIdLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:textColor="@color/primary_text"
        android:id="@+id/taskTitleLabel"
        android:layout_below="@+id/taskIdLabel"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:paddingTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taskTitleEdit"
        android:textColor="@color/secondary_text"
        android:layout_alignBottom="@+id/taskTitleLabel"
        android:layout_toEndOf="@+id/taskTitleLabel"
        android:text="Teste" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textColor="@color/primary_text"
        android:id="@+id/taskDescriptionLabel"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/taskTitleLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:id="@+id/taskDescriptionEdit"
        android:layout_alignBottom="@+id/taskDescriptionLabel"
        android:layout_toEndOf="@+id/taskDescriptionLabel"
        android:text="teste" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pomodoro: "
        android:textColor="@color/primary_text"
        android:id="@+id/taskPomodoroLabel"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/taskDescriptionLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/taskPomodoroEdit"
        android:layout_alignBottom="@+id/taskPomodoroLabel"
        android:layout_toEndOf="@+id/taskPomodoroLabel"
        android:text="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ShortBreak: "
        android:textColor="@color/primary_text"
        android:id="@+id/taskShortBreakLabel"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/taskPomodoroLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/taskShortBreakEdit"
        android:layout_alignBottom="@+id/taskShortBreakLabel"
        android:layout_toEndOf="@+id/taskShortBreakLabel"
        android:text="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LongBreak: "
        android:textColor="@color/primary_text"
        android:id="@+id/taskLongBreakLabel"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/taskShortBreakLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/taskLongBreakEdit"
        android:layout_alignBottom="@+id/taskLongBreakLabel"
        android:layout_alignStart="@+id/taskDescriptionEdit"
        android:text="15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/taskSaveButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/taskShortBreakLabel"
        android:layout_marginBottom="60dp" />


</RelativeLayout>
